<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="category_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="explanation_style">
        <item name="android:paddingLeft">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_margin</item>
        <item name="android:paddingTop">@dimen/header_space</item>
        <item name="android:paddingBottom">@dimen/element_space</item>
    </style>

    <style name="track_style">
        <item name="android:paddingLeft">@dimen/element_space</item>
        <item name="android:paddingRight">@dimen/app_margin</item>
        <item name="android:paddingTop">@dimen/app_margin</item>
        <item name="android:paddingBottom">@dimen/element_space</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="element_style">
        <item name="android:paddingTop">@dimen/element_space</item>
        <item name="android:paddingBottom">@dimen/element_space</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/elementBackground</item>
        <item name="android:paddingLeft">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_margin</item>
    </style>

    <style name="other_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/element_space</item>
        <item name="android:paddingBottom">@dimen/element_space</item>
        <item name="android:paddingLeft">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_margin</item>
    </style>

</resources>
